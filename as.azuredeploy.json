{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resource": { "type": "object" }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-12-01",
            "name": "[parameters('resource').as.name]",
            "type": "Microsoft.Compute/availabilitySets",
            "location": "[resourceGroup().location]",
            "properties": {
                "platformFaultDomainCount": "[parameters('resource').as.platformFaultDomainCount]",
                "platformUpdateDomainCount": "[parameters('resource').as.platformUpdateDomainCount]"
            },
            "sku": {
                "name": "Aligned"
            }
        }
    ],
    "outputs": {
        "subscriptionOutput": {
            "type": "Object",
            "value": "[deployment()]"
        }
    }
}