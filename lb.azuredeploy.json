{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resource": { "type": "object" },
        "vnet": { "type": "object" },
        "probes": { "type": "array" },
        "lbRules": { "type": "array" }
    },
    "variables": {
        "vnetId": "[resourceId(parameters('vnet').groupName,'Microsoft.Network/virtualNetworks', parameters('vnet').name)]",
        "subnetId": "[concat(variables('vnetId'), '/subnets/', parameters('resource').subnet.name)]",
        "lbId": "[resourceId('Microsoft.Network/loadBalancers', parameters('resource').loadBalancer.name)]",
        "frontEndIPConfigID": "[concat(variables('lbId'),'/frontendIPConfigurations/',parameters('resource').loadBalancer.frontend.name)]",
        "lbPoolID": "[concat(variables('lbId'), '/backendAddressPools/', parameters('resource').loadBalancer.backend.name)]"
    },
    "resources": [
        {
            "apiVersion": "2017-10-01",
            "condition": "[equals(parameters('resource').loadBalancer.enable, 'true')]",
            "name": "[parameters('resource').loadBalancer.name]",
            "type": "Microsoft.Network/loadBalancers",
            "location": "[resourceGroup().location]",
            "sku": {
                "name": "[parameters('resource').loadBalancer.sku]"
            },
            "dependsOn": [],
            "scale": null,
            "properties": {
                "frontendIPConfigurations": [
                    {
                        "name": "[parameters('resource').loadBalancer.frontend.name]",
                        "properties": {
                            "privateIPAllocationMethod": "[parameters('resource').loadBalancer.privateIPAllocationMethod]",
                            "subnet": {
                                "id": "[variables('subnetId')]"
                            }
                        }
                    }
                ],
                "backendAddressPools": [ { "name": "[parameters('resource').loadBalancer.backend.name]" } ],
                "copy": [{
                    "name": "loadBalancingRules",
                    "count": "[length(parameters('lbRules').lbRules)]",
                    "input": {
                        "lun": "[copyIndex('loadBalancingRules')]",
                        "name": "[parameters('lbRules').lbRules[copyIndex('loadBalancingRules')].name]",
                        "properties": {
                            "frontendIPConfiguration": {
                                "id": "[variables('frontEndIPConfigID')]"
                            },
                            "frontendPort": "[parameters('lbRules').lbRules[copyIndex('loadBalancingRules')].frontendPort]",
                            "backendPort": "[parameters('lbRules').lbRules[copyIndex('loadBalancingRules')].backendPort]",
                            "enableFloatingIP": false,
                            "idleTimeoutInMinutes": 4,
                            "protocol": "Tcp",
                            "loadDistribution": "SourceIP",
                            "disableOutboundSnat": false,
                            "backendAddressPool": {
                                "id": "[variables('lbPoolID')]"
                            },
                            "probe": {
                                "id": "[concat(variables('lbId'),'/probes/',parameters('lbRules').lbRules[copyIndex('loadBalancingRules')].probeName)]"
                            }
                        }
                    }
                }],
                "probes": "[parameters('probes')]",
                "inboundNatRules": [],
                "outboundNatRules": [],
                "inboundNatPools": []
            }
        }
    ],
    "outputs": {
        "subscriptionOutput": {
            "type": "Object",
            "value": "[deployment()]"
        }
    }
}