{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "Container": { "type": "object" },
      "recoveryVault": { "type": "object" },
      "policyName": { "type": "string" },
      "count": { "type": "int" },
      "vm": { "type": "object" }
    },
    "variables": {},
    "resources": [
      {
        "name": "[concat(resourceId(parameters('recoveryVault').groupName,'Microsoft.RecoveryServices/vaults/backupPolicies',parameters('recoveryVault').name,parameters('policyName') ),'-','backup' )]",
        "apiVersion": "2016-06-01",
        "location": "[resourceGroup().location]",
        "type": "Microsoft.RecoveryServices/vaults/backupFabrics/protectionContainers/protectedItems",
        "copy": {
          "name": "v2VmsCopy",
          "count": "[parameters('count')]"
        },
        "properties": {
          "protectedItemType": "[parameters('Container').v2VmType]",
          "policyId": "[resourceId(parameters('recoveryVault').groupName,'Microsoft.RecoveryServices/vaults/backupPolicies',parameters('recoveryVault').name,parameters('policyName') )]",
          "sourceResourceId": "[resourceId(subscription().subscriptionId,resourceGroup().name,'Microsoft.Compute/virtualMachines',concat(parameters('vm').name,'-',copyIndex()))]"
        }
      }
    ],
    "outputs": {}
}